<% include partials/_header %>
<div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/saveEdit" method="post">
                            <input type="hidden" name="id" value="<%= task.id %>">
                            <div class="form-group">
                                <input type="text" name="title" value="<%= task.title%>" placeholder="insert title" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" cols="80" class="form-control" placeholder="Insert Description"><%= task.description%></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Editar</button>
                        </form>
                    </div>
                </div>
    
            </div>
    </div>
</div>
<% include partials/_footer %>
